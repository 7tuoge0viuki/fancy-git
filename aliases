alias fancygit="sh ~/.fancy-git/commands $1"
alias fancy-git.update="$current_dir=$(pwd) && cd ~/.fancy-git && git pull && cd $current_dir"
alias fancy-git.help="cat ~/.fancy-git/help"
alias g.s="clear && git status"
alias g.a="git add"
alias g.aa="git add --all"
alias g.d="clear && git diff "
alias g.cm="git commit"
alias g.ck="git checkout -- "
alias g.l="git log"
alias g.lp="git log --pretty=oneline"
alias g.remove.origfiles="find . -name "*.orig" | xargs rm -rf"
alias g.force.ignore="git update-index --assume-unchanged"
