alias fancygit="sh ~/.fancy-git/commands.sh $1"
alias gs="clear && git status"
alias ga="git add"
alias gaa="git add --all"
alias gd="clear && git diff"
alias gcm="git commit -v"
alias gcmm="git commit -m"
alias gpl="git pull"
alias gps="git push"
alias gplo="git pull origin"
alias gpso="git push origin"
alias gplob="sh ~/.fancy-git/alias_functions/gplob.sh"
alias gpsob="sh ~/.fancy-git/alias_functions/gpsob.sh"
alias gck="git checkout --"
alias gckb="git checkout"
alias gcb="git checkout -b"
alias gdb="git branch -D"
alias gdbr="git push origin --delete"
alias grb="sh ~/.fancy-git/alias_functions/grb.sh"
alias grba="sh ~/.fancy-git/alias_functions/grba.sh"
alias gl="git log"
alias glp="git log --pretty=format:\"%h | %ar | %an ==> %s\""
alias gdof="find . -name "*.orig" | xargs rm -rf"
alias gfi="git update-index --assume-unchanged"
alias gurl="sh ~/.fancy-git/alias_functions/gurl.sh"
alias guser="sh ~/.fancy-git/alias_functions/guser.sh"
